@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>
 <h2>Error Occured in @Model.ControllerName Controller</h2>
<h2>The Action Method causes exception is @Model.ActionName </h2>
<h2>The Error Message is @Model.ErrorMessage</h2>

<a asp-action="@Model.ActionName" asp-controller="@Model.ControllerName">Go Back</a>